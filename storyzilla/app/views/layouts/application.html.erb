<!DOCTYPE html>
<html>
<head>
  <title>Storyzilla</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% flash.each do |type, msg| %>
    <div class="<%= type %>">
      <p><%= msg %></p>
    </div>
  <% end %>

<%= yield %>

  <pre>
    <%= session[:user_id].inspect %>
  </pre>

</body>
</html>
